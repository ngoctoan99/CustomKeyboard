<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:id="@+id/space_pressed"
                android:bottom="@dimen/key_margin"
                android:left="@dimen/key_margin"
                android:right="@dimen/key_margin"
                android:top="@dimen/key_margin"
                android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/keyboard_bg_item_grey" />
                    <corners android:radius="@dimen/key_normal_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:id="@+id/space_normal"
                android:bottom="@dimen/frogo_dimen_2dp"
                android:left="@dimen/frogo_dimen_2dp"
                android:right="@dimen/frogo_dimen_2dp"
                android:top="@dimen/frogo_dimen_2dp"
                android:state_pressed="true">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/keyboard_bg_normal_stroke_color" />
                    <solid android:color="@color/keyboard_bg_normal_color" />
                    <corners android:radius="@dimen/key_normal_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
